{% extends 'base.html.twig' %}

{% block title %}Ajouter un abonnement{% endblock %}

{% block body %}

    {% if abonnement is not defined %}
        <h1 class="text-center my-3 section_subtitle titre_presetation1 fs-1">Ajouter un Abonnement</h1>
    {% else %}
        <h1 class="text-center my-3">Modifier l'abonnement{{ abonnement.id }}</h1>
    {% endif %}

    <div class="row text-white">
        <div class="col-8 mx-auto">

            {{ form_start(form) }}

                {{ form_row(form.titre) }}
                {{ form_row(form.subtitre) }}
                {{ form_row(form.tarif) }}
                {{ form_row(form.duree) }}
                {{ form_row(form.alias) }}


                <div class="row">
                    <div class="col-6">{{ form_row(form.photo) }}
                    {{ form_row(form.description) }}

                </div>
                </div>

            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
