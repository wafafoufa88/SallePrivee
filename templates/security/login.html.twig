{% extends 'base.html.twig' %}

{% block title %}Connexion | Salle de sport{% endblock %}

{% block body %}

    <div class="row text-white">
        <div class="col-4 mt-4 mx-auto">
            <form method="post">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {#    {% if app.user %}#}
                {#        <div class="mb-3">#}
                {#            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>#}
                {#        </div>#}
                {#    {% endif %}#}



                <h1 class="h3 mb-3 font-weight-normal text-center section_subtitle titre_presetation1 fs-1">Connectez-vous !</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <br>
                <label for="inputPassword">Mot de passe</label>
                <br>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
<br>
                <div class="mb-3">
                   
                       <a style="margin-left: 0px"href="{{ path('app_forgot_password_request') }}" class="lien-reset" >Mot de passe oublier ?</a>
                  
                </div>
               
 
                <button class="d-block col-8 mx-auto my-4 btn btn-outline-warning text-white" type="submit">Connexion</button>
            
            </form>
        </div>
    </div>

{% endblock %}