{% extends 'base.html.twig' %}

{% block title %}réinitialisez votre mot de passe{% endblock %}
{% block navbar %} {% endblock %}
{% block body %}
<br>
<br>
<div class="login-form">
<div class="row text-white">
        <div class="col-6 mx-auto">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email,{'attr':{'class':'form form-control'}}) }}
        <div class="row text-white">
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>
<br>
        <button class="btn btn-outline-warning text-white">Envoyer un e-mail de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
    </div>
    </div>
    </div>
    <br>
    <br>
{% endblock %}
{% block footer%}{% endblock%}
